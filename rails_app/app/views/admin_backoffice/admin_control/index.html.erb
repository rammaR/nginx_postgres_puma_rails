<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">
            Listando Administradores
        </h1>
    </div>
</div>

<div class="table-responsive">
    <table class="table table-striped table-bordered table-hover">
        <thead>
            <tr>
                <th>#</th>
                <th>Email</th>
                <th></th>
                <th>
                    <%= link_to new_admin_backoffice_admin_control_path, class: 'btn btn-success btn-circle' do %>
                        <i class="fa fa-plus"></i>
                    <% end %>
                </th>
            </tr>
        </thead>
        <% @admins.each do |admin| %>
            <tr>
                <td><%= admin.id %> </td>
                <td><%= admin.email %></td>
                <td style="width: 100px">
                    <%= link_to edit_admin_backoffice_admin_control_path(admin.id), class: 'btn btn-primary btn-circle' do %>
                        <i class="fa fa-edit"></i>
                    <% end %>
                </td>
                <td style="width: 100px">
                    <%= link_to admin_backoffice_admin_control_path(admin.id), method: :delete, class: 'btn btn-danger btn-circle', data: {confirm: "Deseja realmente excluir esse administrador?"} do %>
                        <i class="fa fa-minus"></i>
                    <% end %>
                </td>
            </tr>
        <% end %>
    </table>
</div>

<%= paginate @admins %>