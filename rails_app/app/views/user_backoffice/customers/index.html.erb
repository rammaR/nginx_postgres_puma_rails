<p id="notice"><%= notice %></p>

<h1>Customers</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Address</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @customers.each do |customer| %>
      <tr>
        <td><%= customer.name %></td>
        <td><%= customer.email %></td>
        <td><%= customer.address %></td>
        <td><%= link_to 'Show', user_backoffice_customer_path(customer) %></td>
        <td><%= link_to 'Edit',  edit_user_backoffice_customer_path(customer) %></td>
        <td><%= link_to 'Destroy', user_backoffice_customer_path(customer), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

