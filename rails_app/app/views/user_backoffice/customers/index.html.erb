<p id="notice"><%= notice %></p>

<h1>Listando Clientes</h1>

<div class="container">
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Address</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @customers.each do |customer| %>
        <tr>
          <td><%= customer.name %></td>
          <td><%= customer.email %></td>
          <td><%= customer.address %></td>
          <td><%= link_to 'Show', customer_path(customer) %></td>
          <td><%= link_to 'Edit',  edit_customer_path(customer) %></td>
          <td><%= link_to 'Destroy', customer_path(customer), method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<br>

<%= link_to 'Cadastrar Novo Cliente', new_customer_path %>