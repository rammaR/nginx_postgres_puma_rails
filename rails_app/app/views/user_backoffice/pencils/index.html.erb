<p id="notice"><%= notice %></p>

<h1>Pencils</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pencils.each do |pencil| %>
      <tr>
        <td><%= pencil.name %></td>
        <td><%= link_to 'Show', pencils_path(pencil) %></td>
        <td><%= link_to 'Edit', edit_pencil_path(pencil) %></td>
        <td><%= link_to 'Destroy', pencil_path(pencil), method: :delete, data: { confirm: 'Tem certeza?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Pencil', new_pencil_path %>
