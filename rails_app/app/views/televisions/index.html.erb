<p id="notice"><%= notice %></p>

<h1>Televisions</h1>

<table>
  <thead>
    <tr>
      <th>Screen</th>
      <th>Type</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @televisions.each do |television| %>
      <tr>
        <td><%= television.screen %></td>
        <td><%= television.type %></td>
        <td><%= television.price %></td>
        <td><%= link_to 'Show', television %></td>
        <td><%= link_to 'Edit', edit_television_path(television) %></td>
        <td><%= link_to 'Destroy', television, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Television', new_television_path %><br/>
<%= link_to 'Test Television', televisions_redir_path %><br/>
