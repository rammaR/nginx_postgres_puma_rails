<%= form_with(model: coin, local: true) do |form| %>
  <% if coin.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(coin.errors.count, "error") %> prohibited this coin from being saved:</h2>

      <ul>
      <% coin.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= form.label :description, class: 'form-label' %>
    <%= form.text_field :description, id: :coin_description, class: 'form-control', placeholder: 'Enter name' %>
  </div>

  <div class="mb-3">
    <%= form.label :acronym, class: 'form-label' %>
    <%= form.text_field :acronym, id: :coin_acronym, class: 'form-control', placeholder: 'Enter acronym' %>
  </div>

  <div class="mb-3">
    <%= form.label :url_image, class: 'form-label' %>
    <%= form.text_field :url_image, id: :coin_url_image, class: 'form-control', placeholder: 'Enter url image' %>
  </div>

  <div class="mb-3">
    <%= form.label :mining_type, class: 'form-label' %>
    <%= form.select("mining_type_id", @mining_type_options, {include_blank: 'Selecione...'}) %>

  </div>

  <div class="mb-3">
    <%= form.submit nil, class: 'btn btn-secondary' %>
  </div>
<% end %>
