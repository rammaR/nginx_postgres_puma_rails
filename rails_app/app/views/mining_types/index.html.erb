<p id="notice"><%= notice %></p>

<h1>Mining Types</h1>

<table class='table table-striped-columns'>
  <thead>
    <tr>
      <th>Name</th>
      <th>Acronym</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @mining_types.each do |mining_type| %>
      <tr>
        <td><%= mining_type.name %></td>
        <td><%= mining_type.acronym %></td>
        <td><%= link_to 'Show', mining_type %></td>
        <td><%= link_to 'Edit', edit_mining_type_path(mining_type) %></td>
        <td><%= link_to 'Destroy', mining_type, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Mining Type', new_mining_type_path, class: 'btn btn-primary' %><br>
<%= link_to 'Back', home_index_path, class: 'btn btn-secondary' %>
